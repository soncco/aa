{% extends '::backend.html.twig' %}

{% block id 'categoria' %}
{% block title %}Datos de la categoría {{ entity }}{% endblock %}

{% block content %}

<div class="input_wrapper">
  Nombre: <strong>{{ entity.nombre }}</strong>
</div>

{% endblock %}
{% block button_area %}
<a href="{{ path('backend_categoria_edit', { 'id': entity.id }) }}" class="button"><div class="icon"></div>Modificar Categoría</a>
<a href="{{ path('backend_categoria') }}" class="button"><div class="icon back"></div>Volver al listado</a>
<a class="button_primary button continue" href="{{ path('backend_categoria_new') }}">
  Añadir una nueva categoría
</a>
{% endblock %}