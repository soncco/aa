{% extends '::backend.html.twig' %}

{% block id 'categoria' %}
{% block title %}Añadir una nueva categoría{% endblock %}

{% block content %}
{{ form_errors(form) }}
<form action="{{ path('backend_categoria_create') }}" method="post" {{ form_enctype(form) }}>
    <div class="input_wrapper">
    {{ form_row(form.nombre) }}
    </div>
    <p>
        <button class="button_primary button continue" type="submit">Añadir categoría</button>
    </p>
    {{ form_rest(form) }}
</form>
{% endblock %}
{% block button_area %}
<a href="{{ path('backend_categoria') }}" class="button"><div class="icon back"></div>Volver al listado</a>
{% endblock %}
