{% extends '::backend.html.twig' %}

{% block id 'trentipo' %}
{% block title %}Datos del tipo de tren {{ entity }}{% endblock %}

{% block content %}

<div class="input_wrapper">
  Número: <strong>{{ entity.numero }}</strong> 
</div>
<div class="input_wrapper">
  Empresa: <strong>{{ entity.empresa }}</strong>
</div>
<div class="input_wrapper">
  Nombre: <strong>{{ entity.nombre }}</strong> 
</div>

{% endblock %}
{% block button_area %}
<a href="{{ path('backend_trentipo_edit', { 'id': entity.id }) }}" class="button"><div class="icon"></div>Modificar Tipo</a>
<a href="{{ path('backend_trentipo') }}" class="button"><div class="icon back"></div>Volver al listado</a>
<a class="button_primary button continue" href="{{ path('backend_trentipo_new') }}">
  Añadir un nuevo tipo
</a>
{% endblock %}