{% extends '::backend.html.twig' %}

{% block id 'trendisponibilidad' %}
{% block title %}Disponibilidad de trenes{% endblock %}

{% block content %}
<table>
    <thead>
        <tr>
            <th>Tren</th>
            <th>Itinerario</th>
            <th>Hora de partida</th>
            <th>Hora de llegada</th>
            <!--th>Precio Adultos</th>
            <th>Precio Ni√±os</th-->
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <th>{{ entity.tipo }}</th>
            <th>{{ entity.origen }} - {{ entity.destino }}</th>
            <th>{{ entity.partida }}</th>
            <th>{{ entity.llegada }}</th>
            <!--th>{{ entity.precioadultos }}</th>
            <th>{{ entity.precioninos }}</th-->
            <td>
                <ul>
                    <li>
                        <a href="{{ path('backend_trendisponibilidad_calendar', { 'id': entity.id }) }}">Ver o modificar disponibilidad</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
{% block button_area %}
{% endblock %}