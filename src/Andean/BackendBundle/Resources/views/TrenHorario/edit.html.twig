{% extends '::backend.html.twig' %}

{% block id 'trenhorario' %}
{% block title %}Modificar el horario {{ entity }}{% endblock %}

{% block content %}
<form action="{{ path('backend_trenhorario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="input_wrapper">
    {{ form_row(edit_form.tipo) }}
    {{ form_row(edit_form.partida) }}
    {{ form_row(edit_form.llegada) }}
    {{ form_row(edit_form.origen) }}
    {{ form_row(edit_form.destino) }}
    {{ form_row(edit_form.precio_adultos) }}
    {{ form_row(edit_form.precio_ninos) }}
    </div>
    {#{ form_widget(edit_form) }#}
    <p>
        <button class="button_primary button continue" type="submit">Guardar cambios</button>
    </p>
    {{ form_rest(edit_form) }}
</form>
{% endblock %}
{% block button_area %}
<a href="{{ path('backend_trenhorario') }}" class="button"><div class="icon back"></div>Volver al listado</a>
{% endblock %}