{% extends '::backend.html.twig' %}

{% block id 'tour' %}
{% block title %}Añadir un nuevo tour{% endblock %}

{% block content %}
{{ form_errors(form) }}
<form action="{{ path('backend_tour_create') }}" method="post" {{ form_enctype(form) }}>
    <div class="input_wrapper">
    {{ form_row(form.nombre, { 
      'attr' : {
        'class' : 'big'
      }}) }}
    {{ form_row(form.precio) }}
    </div>
    <p>
        <button class="button_primary button continue" type="submit">Añadir tour</button>
    </p>
    {{ form_rest(form) }}
</form>
{% endblock %}
{% block button_area %}
<a href="{{ path('backend_tour') }}" class="button"><div class="icon back"></div>Volver al listado</a>
{% endblock %}
