{% extends '::backend.html.twig' %}

{% block id 'tour' %}
{% block title %}Modificar el tour {{ entity }}{% endblock %}

{% block content %}
<form action="{{ path('backend_tour_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="input_wrapper">
    {{ form_row(edit_form.nombre) }}
    {{ form_row(edit_form.precio, { 
      'attr' : {
        'class' : 'big'
      }}) }}
    </div>
    {#{ form_widget(edit_form) }#}
    <p>
        <button class="button_primary button continue" type="submit">Guardar cambios</button>
    </p>
    {{ form_rest(edit_form) }}
</form>
{% endblock %}
{% block button_area %}
<a href="{{ path('backend_tour') }}" class="button"><div class="icon back"></div>Volver al listado</a>
{% endblock %}