<link href="{{ asset('bundles/backend/css/content.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
